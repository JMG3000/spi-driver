{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cmake --build build",
      "dependsOn": "Configure (CMake)",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Configure (CMake)",
      "type": "shell",
      "command": "cmake -S . -B build",
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "cmake --build build --target clean",
      "problemMatcher": []
    }
  ]
}
